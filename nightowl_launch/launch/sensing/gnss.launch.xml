<launch>
    <arg name="navsatfix_input_topic" default="/sensing/ins/starneto/nav_sat_fix"/>
    <arg name="navpvt_input_topic" default="/sensing/ins/starneto/navpvt" />
    <arg name="gnss_pose_output_topic" default="/sensing/gnss/pose" />
    <arg name="gnss_pose_cov_output_topic" default="/sensing/gnss/pose_with_covariance" />
    <arg name="gnss_pose_fix_output_topic" default="/sensing/gnss/fixed" />
    <arg name="coordinate_system" default="1" description="0:UTM, 1:MGRS, 2:PLANE"/>

    <include file="$(find-pkg-share gnss_poser)/launch/gnss_poser.launch.xml">
      <arg name="input_topic_fix" value="$(var navsatfix_input_topic)"/>
      <arg name="input_topic_navpvt" value="$(var navpvt_input_topic)"/>

      <arg name="output_topic_gnss_pose" value="$(var gnss_pose_output_topic)"/>
      <arg name="output_topic_gnss_pose_cov" value="$(var gnss_pose_cov_output_topic)"/>
      <arg name="output_topic_gnss_fixed" value="$(var gnss_pose_fix_output_topic)"/>

      <arg name="coordinate_system" value="$(var coordinate_system)"/>
      <arg name="use_ublox_receiver" value="true"/>

      <arg name="gnss_frame" value="ins_link"/>
    </include>
</launch>
