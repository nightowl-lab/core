<launch>
    <arg name="launch_driver" default="true"/>
    <arg name="coordinate_system" default="1" description="0:UTM, 1:MGRS, 2:PLANE"/>

    <arg name="input_topic_gpfpd" default="/starneto/gnss/raw_data"/>
    <arg name="input_topic_gtimu" default="/starneto/imu/raw_data"/>

    <arg name="output_topic_fix" default="/fix"/>
    <arg name="output_topic_navpvt" default="/navpvt"/>
    <!-- <arg name="output_topic_imu" default="imu_raw"/> -->
    <arg name="output_topic_imu" default="/imu/data"/>

    <node pkg="starneto_autoware_interface" exec="starneto_autoware_interface" name="starneto_autoware_interface" output="screen">
        <remap from="input_topic_gpfpd" to="$(var input_topic_gpfpd)"/>
        <remap from="input_topic_gtimu" to="$(var input_topic_gtimu)"/>

        <remap from="fix" to="$(var output_topic_fix)"/>
        <remap from="navpvt" to="$(var output_topic_navpvt)"/>
        <remap from="imu/data_raw" to="$(var output_topic_imu)"/>

        <param name="launch_driver" value="$(var launch_driver)"/>
        <param name="coordinate_system" value="$(var coordinate_system)"/>
    </node>
</launch>